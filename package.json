{
  "name": "mini-tool",
  "displayName": "Mini Tool",
  "description": "自用工具合集 包含 Git emoji 日志提交图标、中文排版、JSON 修复美化、css prettier 忽略添加、Vscode 快速折叠行及标记 等",
  "version": "0.0.27",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/miniocean404-tool/vscode-plugin-mini-tool"
  },
  "publisher": "miniocean404",
  "keywords": [
    "mini",
    "tool",
    "mini-tool",
    "console.log",
    "console",
    "emoji",
    "css",
    "ignore",
    "minitool"
  ],
  "scripts": {
    "build": "pnpm --filter mini-* build:vsce",
    "patch-publish": "pnpm --filter mini-* patch-publish:vsce",
    "login": "vsce login miniocean404",
    "cursor:login": "ovsx login miniocean404",
    "build:utils": "pnpm --filter ./packages/utils --parallel --stream run build",
    "watch:extensions": "pnpm --filter mini-* --parallel --stream run watch:dev",
    "build:extensions": "pnpm --filter ./extensions/** --parallel --stream run build",
    "generate:l10n": "pnpx @vscode/l10n-dev export  -o ./l10n/ ./l10n/bundle.l10n.json ./package.nls.json",
    "generate:l10n-base": "pnpx @vscode/l10n-dev export  --outDir ./l10n ./src"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "1.107.0",
    "@vscode/l10n": "^0.0.18",
    "@vscode/l10n-dev": "0.0.35",
    "@vscode/vsce": "catalog:",
    "ovsx": "catalog:",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "esbuild": "catalog:"
  }
}

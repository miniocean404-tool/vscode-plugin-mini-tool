{
  "name": "mini-tool",
  "displayName": "Mini Tool",
  "description": "自用工具合集",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "icon": "assets/logo.png",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mini-tool.addRegionToSelection",
        "title": "add Region To Selection",
        "icon": {
          "light": "assets/lollipop.svg",
          "dark": "assets/lollipop.svg"
        }
      },
      {
        "command": "mini-tool.addCssPxIgnore",
        "title": "add css ignore",
        "icon": {
          "light": "assets/lollipop.svg",
          "dark": "assets/lollipop.svg"
        }
      },
      {
        "command": "mini-tool.newFile",
        "title": "新建测试文件",
        "icon": {
          "light": "assets/logo.png",
          "dark": "assets/logo.png"
        }
      },
      {
        "command": "mini-tool.openWebview",
        "title": "打开 webview",
        "icon": {
          "light": "assets/logo.png",
          "dark": "assets/logo.png"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mini-tool.newFile",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "mini-tool.openWebview",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mini-tool.addRegionToSelection",
        "key": "ctrl+l s",
        "mac": "cmd+l s",
        "when": "editorTextFocus"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      },
      {
        "language": "vue",
        "path": "./snippets/vue.json"
      }
    ],
    "configuration": {
      "title": "Mini Tool",
      "properties": {
        "mini-tool.showTip": {
          "type": "boolean",
          "default": true,
          "description": "是否在每次启动时显示欢迎提示！"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc  --watch --project tsconfig.json",
    "package": "pnpm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/postcss-less": "^4.0.6",
    "@types/vscode": "^1.74.0",
    "csstype": "^3.1.3",
    "esbuild": "^0.20.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@vue/compiler-dom": "^3.4.27",
    "postcss": "^8.4.38",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9"
  }
}

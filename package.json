{
  "name": "mini-tool",
  "displayName": "mini-tool",
  "description": "自用工具合集",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mini-tool.addRegionToSelection",
        "title": "add Region To Selection"
      },
      {
        "command": "mini-tool.addCssPxIgnore",
        "title": "add css ignore"
      }
    ],
    "keybindings": [
      {
        "command": "mini-tool.addRegionToSelection",
        "key": "ctrl+l s",
        "mac": "cmd+l s",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc  --watch --project tsconfig.json",
    "package": "pnpm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/postcss-less": "^4.0.6",
    "@types/vscode": "^1.74.0",
    "csstype": "^3.1.3",
    "esbuild": "^0.20.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "postcss": "^8.4.38",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "vue-template-compiler": "^2.7.16"
  }
}

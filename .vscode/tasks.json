// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        // 设置当前任务为默认任务
        "isDefault": true
      }
    },
    {
      "label": "watch-build",
      // 执行其他任务
      "dependsOn": ["npm: watch:tsc", "npm: watch:esbuild"],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build"
      },
      "runOptions": {
        // 对该任务何时运行进行配置。如果设置为 folderOpen，那么该任务将在文件夹打开时自动运行
        "runOn": "folderOpen"
      }
    },
    {
      "label": "npm: watch:tsc",
      "type": "npm",
      "script": "watch:tsc",
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "group": "watch",
        "reveal": "never"
      }
    }
  ]
}
